{
    "manifest_version" : 2,
    "name": "Unlimited Access",
    "description" : "Get unlimited access to medium paid posts",
    "version" :"0.1",

    "background" : {
        "scripts" : ["background.js"],
        "persistent" : false
    },
    "permissions" : [
        "tabs",
        "cookies",
        "https://medium.com/*"],
    "browser_action": { "default_icon": "cookie.png"},
    "content_scripts" : [{
        "matches": ["https://*/*"],
        "js" : ["content.js"]
    }]
}